<section class="vh-100" style="background-color: #2779e2;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-9">

        <h1 class="text-white mb-4">Register new user:</h1>

        <form class="card" style="border-radius: 15px;" action="register" method="POST" enctype="multipart/form-data">
          <div class="card-body">

            <div class="row align-items-center pt-4 pb-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0" >Username</h6>

              </div>
              <div class="col-md-9 pe-5">

                <input id="username" name="username" type="text" class="form-control form-control-lg" autofocus/>

              </div>
            </div>
            <hr class="mx-n3">

            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0">Email address</h6>

              </div>
              <div class="col-md-9 pe-5">

                <input id="email" name="email" type="email" class="form-control form-control-lg" placeholder="example@example.com" required/>

              </div>
            </div>

            <hr class="mx-n3">

            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0">Names:</h6>

              </div>
              <div class="col-md-9 pe-5">

                <input id="nombre" name="nombre" type="text" class="form-control form-control-lg text-capitalize" required/>

              </div>
            </div>

            <hr class="mx-n3">

            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0">Last Name:</h6>

              </div>
              <div class="col-md-9 pe-5">

                <input id="apellido" name="apellido" type="text" class="form-control form-control-lg text-capitalize" required/>

              </div>
            </div>

            <hr class="mx-n3">

            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0">Password:</h6>

              </div>
              <div class="col-md-9 pe-5">

                <input id="password" name="password" type="password" class="form-control" rows="3" placeholder="enter password" required></input>

              </div>
            </div>

              <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0">repeat password</h6>

              </div>
             <div class="col-md-9 pe-5">

                <input id="re-password" name="re-password" type="password" class="form-control" rows="3" placeholder="re-enter password" required></input>

              </div>
            </div>

            <hr class="mx-n3">

            <div class="row align-items-center py-3">
              <div class="col-md-3 ps-5">

                <h6 class="mb-0">Picture profile</h6>

              </div>
              <div class="col-md-9 pe-5">

                <input id="imagen" name="imagen" class="form-control form-control-lg" type="file" required/>
                <div class="small text-muted mt-2">Upload your CV/Resume or any other relevant file. Max file size 50 MB</div>

              </div>
            </div>

            <hr class="mx-n3">
            <p class="text-danger text-center fw-bolder fs-4 m-3 ">{{msg}}</p>
            <div class="px-5 py-4">
              <button type="submit" class="btn btn-primary btn-lg">Send application</button>
            </div>

          </div>
        </form>

      </div>
    </div>
  </div>
</section>